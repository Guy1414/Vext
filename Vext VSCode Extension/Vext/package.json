{
  "name": "vext",
  "displayName": "Vext Language Support",
  "description": "Language Server Protocol support for the Vext language", 
  "license": "MIT",
  "version": "1.0.0",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "vext",
        "aliases": ["Vext", "vext"],
        "extensions": [".vext", ".vxt"],
        "configuration": "./language-configuration.json"
      }
    ],
    "semanticTokenTypes": [
      {"id": "keyword", "description": "Keyword token type"},
      {"id": "variable", "description": "Variable token type"},
      {"id": "function", "description": "Function token type"},
      {"id": "type", "description": "Type token type"},
      {"id": "string", "description": "String token type"},
      {"id": "number", "description": "Number token type"},
      {"id": "boolean", "description": "Boolean token type"},
      {"id": "comment", "description": "Comment token type"},
      {"id": "operator", "description": "Operator token type"}
    ],
    "semanticTokenModifiers": [
      {"id": "declaration", "description": "Declaration token modifier"},
      {"id": "readonly", "description": "Readonly token modifier"}
    ],
    "configuration": {},
    "commands": [
      {
        "command": "vext.runCode",
        "title": "Run Vext Code",
        "icon": "$(debug-start)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "vext.runCode",
          "when": "editorLangId == vext",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "vext.runCode",
          "when": "editorLangId == vext"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "typescript": "^5.2.2"
  }
}
